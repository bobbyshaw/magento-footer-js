<?xml version="1.0"?>
<config>
    <modules>
        <Meanbee_Footerjs>
            <version>0.0.3</version>
        </Meanbee_Footerjs>
    </modules>
    <global>
        <helpers>
            <meanbee_footerjs>
                <class>Meanbee_Footerjs_Helper</class>
            </meanbee_footerjs>
        </helpers>
        <models>
            <meanbee_footerjs>
                <class>Meanbee_Footerjs_Model</class>
            </meanbee_footerjs>
            <enterprise_pagecache>
                <rewrite>
                    <observer>Meanbee_Footerjs_Model_PageCache_Observer</observer>
                </rewrite>
            </enterprise_pagecache>
        </models>
    </global>
    <frontend>
        <events>
            <http_response_send_before>
                <observers>
                    <meanbee_footerjs_http_response>
                        <type>singleton</type>
                        <class>meanbee_footerjs/observer</class>
                        <method>handleHttpResponseInlineJs</method>
                    </meanbee_footerjs_http_response>
                </observers>
            </http_response_send_before>
        </events>
    </frontend>
</config>
